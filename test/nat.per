define Nat
  : Type
  = Record(
      tag : Bool,
      data :
        if(tag) {
          Record()
        } else {
          Nat
        }
    );

define zero
  : Nat
  = record(
      tag = true,
      data = record()
    );

define succ
  : Function(Nat) -> Nat
  = function(n) =>
      record(
        tag = false,
        data = n
      );

define add
  : Function(Nat, Nat) -> Nat
  = function(n, m) =>
      if(n.tag){
        m
      } else {
        add(n.data, m)
      };
