define Ty
  : Type
  = Record(
      T : Type,
      f : Function(T) -> T
    );

define foo
  : Ty
  = record(
      T = Bool,
      f = function(b) => b
    );

define bar
  : patch(Ty){ T = Bool }
  = record(
      T = Bool,
      f = function(b) => b
    );

define baz
  : patch(Ty){ T = Bool }
  = bar;
