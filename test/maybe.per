define Maybe
  : Function(Type) -> Type
  = function(A) =>
      Record(
        tag : Bool,
        data :
          if(tag) {
            A
          } else {
            Record()
          }
      );

define map
  : Function(A : Type, Function(A) -> A, Maybe(A)) -> Maybe(A)
  = function(_, func, maybe) =>
      if(maybe.tag) {
        record(
          tag = true,
          data = func(maybe.data)
        )
      } else {
        record(
          tag = false,
          data = record()
        )
      };
